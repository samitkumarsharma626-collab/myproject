# Application Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =============================================================================
# APPLICATION MODE
# =============================================================================
# Set to 'development', 'staging', or 'production'
ENVIRONMENT=production

# Enable debug mode (NEVER enable in production)
DEBUG=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# DELTA EXCHANGE API CREDENTIALS
# =============================================================================
# Get your API credentials from Delta Exchange dashboard
# Required for trading and balance endpoints
DELTA_API_KEY=your_api_key_here
DELTA_API_SECRET=your_api_secret_here
DELTA_BASE_URL=https://api.india.delta.exchange

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
TRADING_SYMBOL=ETHUSD
CANDLE_RESOLUTION=15m
REQUEST_TIMEOUT=10

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS origins (comma-separated, no wildcards in production)
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:3000

# Allow credentials in CORS requests
CORS_ALLOW_CREDENTIALS=true

# Trusted hosts for security middleware (comma-separated)
# Add your domain names here in production
TRUSTED_HOSTS=localhost,127.0.0.1

# =============================================================================
# FILE PATHS
# =============================================================================
STATIC_DIR=./static

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: 'json' for production, 'text' for development
LOG_FORMAT=json
